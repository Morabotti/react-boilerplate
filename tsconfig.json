{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "es2019.array"],
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@theme": ["src/theme"],
      "@client": ["src/client.ts"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@context": ["src/context"],
      "@context/*": ["src/context/*"],
      "@utils/*": ["src/utils/*"],
      "@types": ["src/types"],
      "@routes": ["src/routes.tsx"],
      "@enums": ["src/enums"],
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}